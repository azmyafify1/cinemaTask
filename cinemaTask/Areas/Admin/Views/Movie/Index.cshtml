@model IEnumerable<cinemaTask.Models.Movie>
@{
    ViewData["Title"] = "Movies";
    Layout = "_AdminLayout";
}

<div class="container mt-3">
    <h2>All Movie</h2>
    <a class="btn btn-success mb-3" asp-action="Create">Create New actor</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>


                <th scope="col">Status</th>
                <th scope="col">Price</th>

                <th scope="col">CategoryName</th>
                <th scope="col">CinemaName</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>

                    @if (!item.Status)
                    {
                        <td><span class="badge text-bg-danger">InActive</span></td>
                    }
                    else
                    {
                        <td><span class="badge text-bg-success">Active</span></td>
                    }
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Cinema.Name</td>


                    <td class="d-flex gap-2">
                        <a href="/Admin/Movie/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                        <a href="/Admin/Movie/Delete/@item.Id" type="button" class="btn btn-danger btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
