@model IEnumerable<cinemaTask.Models.Cinema>
@{
    ViewData["Title"] = "Cinemas";
    Layout = "_AdminLayout";
}

<div class="container mt-3">
    <h2>All Cinemas</h2>
    <a class="btn btn-success mb-3" asp-action="Create">Create New Cinema</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td>@cinema.Id</td>
                    <td>@cinema.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(cinema.ImgPath))
                        {
                            <img src="~/images/@cinema.ImgPath" alt="@cinema.Name" width="100" />
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@cinema.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@cinema.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this cinema?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
